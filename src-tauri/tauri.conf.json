{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Code Notify",
  "version": "0.2.0",
  "identifier": "com.hexyl.claude-code-notify",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Claude Code Notify",
        "width": 480,
        "height": 560,
        "visible": true,
        "skipTaskbar": false,
        "decorations": true,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/**/*"],
    "publisher": "hexyl"
  }
}
